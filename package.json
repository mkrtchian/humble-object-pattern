{
  "name": "humble-object-pattern",
  "version": "1.0.0",
  "description": "Examples of implementing the humble object pattern with tests",
  "homepage": "https://github.com/mkrtchian/humble-object-pattern#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkrtchian/humble-object-pattern.git"
  },
  "keywords": [
    "humble-object-pattern",
    "unit-testing",
    "hexagonal-architecture",
    "functional-architecture"
  ],
  "author": "Roman Mkrtchian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkrtchian/humble-object-pattern/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.0.4",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "jest-extended": "3.1.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "29.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,json,md}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  }
}
