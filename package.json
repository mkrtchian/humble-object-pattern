{
  "name": "humble-object-pattern",
  "version": "1.0.0",
  "description": "Examples of implementing the humble object pattern with tests",
  "homepage": "https://github.com/mkrtchian/humble-object-pattern#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkrtchian/humble-object-pattern.git"
  },
  "keywords": [
    "humble-object-pattern",
    "unit-testing",
    "hexagonal-architecture",
    "functional-architecture"
  ],
  "author": "Roman Mkrtchian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkrtchian/humble-object-pattern/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.10.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-extended": "7.0.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,json,md}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  },
  "dependencies": {
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}
